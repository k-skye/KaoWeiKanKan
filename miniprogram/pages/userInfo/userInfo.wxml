<!--pages/userInfo/userInfo.wxml-->
<view class="page_head">
  <view class="infoHead">
    <view class="userName">空白</view>
    <!-- 记得s_name -->
    <view class="count">{{temp}}<span class="countNumber">{{list.length}}</span>场考试</view>
  </view>
  <radio-group class="weui-flex">
    <radio checked="true" bindtap="selectThis" class="weui-flex__item">本周</radio>
    <radio bindtap="selectNext" class="weui-flex__item">下周</radio>
    <radio bindtap="selectAll" class="weui-flex__item">所有</radio>
    <radio bindtap="selectFinished" class="weui-flex__item">已考完</radio>
  </radio-group>

</view>

<view class="page_body">
  <view wx:for="{{list}}" wx:key="index" data-id="index">
    <view data-index='{{index}}' catchtap='panel'>
      <mp-cells ext-class="my-cells" title="{{item.name}}">
        <mp-cell value="日期" footer="{{item.date}}" wx:if="{{item.open}}"></mp-cell>
        <mp-cell value="时间" footer="{{item.time}}" wx:if="{{item.open}}"></mp-cell>
        <mp-cell value="地点" footer="{{item.room}}" wx:if="{{item.open}}"></mp-cell>
        <mp-cell value="座位号" footer="{{item.seat}}" wx:if="{{item.open}}"></mp-cell>
      </mp-cells>
    </view>
  </view>
</view>